<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/tools"
    android:id="@+id/rl_Acc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:clickable="true"
    android:focusable="true">
    <View
        android:id="@+id/headAccSett"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#bdbdbd"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/timeCom"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageComm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        app:civ_border_color="#bdbdbd"
        app:civ_border_width="0.2dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/fullnameComm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="45dp"
        android:textSize="19sp"
        android:textColor="@color/textColor"
        android:layout_marginStart="45dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/accountSettingsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fullnameComm"
        android:layout_alignStart="@+id/fullnameComm"
        android:layout_toLeftOf="@+id/like_out_Comm"
        android:layout_toStartOf="@+id/like_out_Comm"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_centerVertical="true"
        android:textColor="@color/textColor"
        android:textSize="17sp"
         />
    <TextView
        android:id="@+id/timeCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/textColor"
        android:layout_below="@+id/accountSettingsName"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/likeComm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textColor="@color/textColor"
        android:layout_below="@+id/accountSettingsName"
        android:layout_toRightOf="@+id/timeCom"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/timeCom"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/replyComm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reply"
        android:textColor="@color/textColor"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/accountSettingsName"
        android:layout_toRightOf="@+id/likeComm"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/likeComm"
        android:textStyle="bold"
        android:visibility="invisible"/>
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/like_out_Comm"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:tint="#efeeee"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/like_btn_new"
        android:visibility="invisible"/>
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/liked_Comm"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/like_btn_new"/>
    <custom_views_and_styles.ToggleButton
        android:id="@+id/toggleSwitch"
        android:layout_width="53dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:visibility="gone"
        toggle:tbOnColor="#001919"
        toggle:tbSpotColor="#fff"
        toggle:tbOffBorderColor="#bdbdbd"
        toggle:tbBorderWidth="2dp"
        toggle:tbOffColor="#bdbdbd"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <!--android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        toggle:tbOnColor="#001919"
        toggle:tbSpotColor="#fff"
        toggle:tbOffBorderColor="#bdbdbd"
        toggle:tbBorderWidth="2dp"
        app:tbOffColor="#bdbdbd"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"-->
    <Button
        android:id="@+id/unblock_btn_acc_sett"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/follow_btn"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="Unblock"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
       />
    <FrameLayout
        android:id="@+id/followApprovalCont"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/acceptFollow"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/tick_mark"
            android:background="@android:color/transparent"
            app:tint="#A5D363"
            android:layout_gravity="start"
            />
        <View
            android:layout_height="25dp"
            android:layout_width="0.1dp"
            android:background="#bdbdbd"
            android:layout_gravity="center"/>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/rejectFollow"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/cross_mark"
            android:background="@android:color/transparent"
            app:tint="#FC0505"
            android:layout_gravity="end"
            />
    </FrameLayout>
</RelativeLayout>