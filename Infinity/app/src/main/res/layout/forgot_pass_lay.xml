<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/backForgotPass"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="2dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_arrow_left_back_black_48dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImgForgotPass"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/userFullNameForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userImgForgotPass"
        android:textSize="19sp"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/forgotUsernameEditTxt"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="55dp"
        android:background="@drawable/login_capsule"
        android:hint="Username or Email"
        android:imeOptions="actionDone"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textColorHint="#9000"
        android:layout_centerInParent="true"
        tools:ignore="RtlCompat" />
    <RelativeLayout
        android:id="@+id/newPassForgotPassCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_below="@+id/userImgForgotPass"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_lay_newPassForgotEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            app:hintTextAppearance="@style/TextLabel"
            app:errorTextAppearance="@style/TextLabelError"
            >
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/newPassForgotEditTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/login_capsule"
        android:hint="New Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textColorHint="#9000"
        tools:ignore="RtlCompat" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_lay_confirmPassForgotEditTxt"
            android:layout_below="@+id/text_input_lay_newPassForgotEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            app:hintTextAppearance="@style/TextLabel"
            app:errorTextAppearance="@style/TextLabelError"
            >
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/confirmPassForgotEditTxt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_capsule"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/textColor"
        android:textColorHint="#9000"
        tools:ignore="RtlCompat" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/change_pass_btnForgotPass"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_input_lay_confirmPassForgotEditTxt"
            android:background="@drawable/button_selector"
            android:layout_marginTop="15dp"
            android:text="change"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/check_btnForgotPass"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgotUsernameEditTxt"
        android:background="@drawable/button_selector"
        android:layout_marginTop="20dp"
        android:text="check"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
         />
    <Button
        android:id="@+id/otp_btnForgotPass"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgotUsernameEditTxt"
        android:background="@drawable/button_selector"
        android:layout_marginTop="20dp"
        android:text="verify"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        />
    <Button
        android:id="@+id/send_btnForgotPass"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/check_btnForgotPass"
        android:background="@drawable/button_selector"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:text="OTP"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
         />
</RelativeLayout>