<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogMsgLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:pikolo="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="-5dp"
    android:background="@drawable/loading_circle"
    android:orientation="vertical"
    android:padding="10dp"
    app:ignore="NamespaceTypo">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In these societies you can find specific posts &amp; connect with your like minded people easily ."
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="22sp" />
    <com.madrapps.pikolo.HSLColorPicker
        android:id="@+id/colorPicker"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        app:lightness_indicator_stroke_width="0dp"
        pikolo:arc_length="110"
        pikolo:hue_start_angle="30"
        pikolo:lightness_start_angle="270"
        pikolo:radius_offset="20dp"
        pikolo:indicator_stroke_width="0dp"
        pikolo:lightness_indicator_stroke_width="0dp"
        pikolo:saturation_indicator_stroke_width="0dp"
        pikolo:saturation_indicator_stroke_color="@color/colorPrimary"
        pikolo:saturation_start_angle="150"
        />

    <Button
    android:id="@+id/demoImg"
      android:visibility="gone"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:textAllCaps="false"
      android:layout_centerInParent="true"
    />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_selector"
        android:text="ok"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif"
        />
    <FrameLayout
        android:id="@+id/toggleContColor"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:visibility="gone"
        >
        <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkBoxTxtColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
         />
        <custom_views_and_styles.ToggleButton
            android:id="@+id/bgColorToggle"
            android:layout_width="53dp"
            android:layout_height="25dp"
            toggle:tbOnColor="@color/colorElegantGreen"
            toggle:tbSpotColor="#fff"
            toggle:tbOffBorderColor="#bdbdbd"
            toggle:tbBorderWidth="2dp"
            app:tbOffColor="#bdbdbd"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:text="Background"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBoxBgColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="end"
            />
        <custom_views_and_styles.ToggleButton
            android:id="@+id/txtColorToggle"
            android:layout_width="53dp"
            android:layout_height="25dp"
            android:layout_marginTop="57dp"
            toggle:tbOnColor="@color/colorElegantGreen"
            toggle:tbSpotColor="#fff"
            toggle:tbOffBorderColor="#bdbdbd"
            toggle:tbBorderWidth="2dp"
            app:tbOffColor="#bdbdbd"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:text="Text"/>
    </FrameLayout>

</RelativeLayout>