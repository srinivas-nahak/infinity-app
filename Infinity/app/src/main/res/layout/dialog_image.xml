    <custom_views_and_styles.DragToClose
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:drag="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dragViewDialogImg"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        drag:draggableContainer="@+id/dialog_image"
        drag:draggableView="@+id/dialog_image"
        android:visibility="gone"
        drag:finishActivity="false"
        drag:closeOnClick="false">
    <ooo.oxo.library.widget.TouchImageView
        android:id="@+id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="fitStart" />
        <ImageButton
            android:id="@+id/doneBgShow"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end"
            android:padding="2dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tick_mark"
            />
    </custom_views_and_styles.DragToClose>
     <FrameLayout
         android:id="@+id/bookTxtFrame"
         android:layout_width="match_parent"
         android:layout_height="500dp"
         android:layout_marginTop="15dp"
         android:visibility="gone"
         >
         <TextView
             android:id="@+id/dialog_text"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"
             android:autoLink="web"
             android:clickable="true"
             android:focusable="true"
             android:gravity="center"
             android:interpolator="@android:anim/linear_interpolator"
             android:linksClickable="true"
             android:padding="10dp"
             android:textColor="#001919"
             android:textColorLink="#FF5E91EC"
             android:textIsSelectable="true"
             android:textSize="16sp"
             android:typeface="serif"
             tools:ignore="NewApi" />
     </FrameLayout>
    <ScrollView
        android:id="@+id/scrollBook"
        android:scrollbars="none"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:visibility="gone"
        android:layout_height="500dp">
        <TextView
            android:id="@+id/dialog_text_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:padding="10dp"
            android:textColor="#001919"
            android:textColorLink="#FF5E91EC"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:typeface="serif"
            />
    </ScrollView>
    <RelativeLayout
        android:id="@+id/ll_buttonsBook"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:orientation="horizontal"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/closeButtonBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:tint="#fff"
            app:backgroundTint="#FC0505"
            app:elevation="0dp" />

        <TextView
            android:id="@+id/cross_markBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="X"
            android:textColor="#fff"
            android:textStyle="bold" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/horz_ButtonBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/horizontal_pg"
            android:scaleType="center"
            android:tint="#001919"
            app:backgroundTint="#efeeee"
            app:elevation="0dp"
            tools:ignore="VectorDrawableCompat" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/vert_ButtonBook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/horizontal_pg"
            android:scaleType="center"
            android:rotation="90"
            android:tint="#001919"
            app:backgroundTint="#efeeee"
            app:elevation="0dp"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pgCounter"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/book_pg_count"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:id="@+id/curPg"
            android:textColor="#fff"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/obliq"
            android:text="/"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/curPg"
            android:layout_toRightOf="@+id/curPg"/>
        <TextView
            android:id="@+id/totPg"
            android:textColor="#fff"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/obliq"
            android:layout_toRightOf="@+id/obliq"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fontRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="5dp"/>
</RelativeLayout>