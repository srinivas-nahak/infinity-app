<?xml version="1.0" encoding="utf-8"?>
<custom_views_and_styles.DragToClose
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drag="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dragViewShortBook"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    drag:draggableContainer="@+id/shortBookCont"
    drag:draggableView="@+id/headShortBook"
    drag:finishActivity="false"
    drag:closeOnClick="false">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shortBookCont"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:id="@+id/headShortBook"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_gravity="bottom"
        />
    </FrameLayout>
    <ImageButton
        android:id="@+id/backShortBook"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:rotation="-90"
        drag:srcCompat="@drawable/down_arrow"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/nextShortBook"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerInside"
        android:padding="2dp"
        android:rotation="-90"
        drag:srcCompat="@drawable/down_arrow"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Write"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:textSize="23sp"
        android:fontFamily="sans-serif-condensed"
        />
    <RelativeLayout
        android:id="@+id/toolsshortBook"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/headShortBook"
        android:gravity="center"
        >
        <ToggleButton
            android:id="@+id/boldShortBook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            tools:ignore="MissingPrefix"
            android:textOff=""
            android:textOn=""
            />


        <ToggleButton
            android:id="@+id/italicShortBook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            tools:ignore="MissingPrefix"
            android:textOff=""
            android:textOn=""
            android:layout_toRightOf="@+id/boldShortBook"
            android:layout_toEndOf="@+id/boldShortBook"
            />
        <ToggleButton
            android:id="@+id/underlineShortBook"
            android:layout_toRightOf="@+id/italicShortBook"
            android:layout_toEndOf="@+id/italicShortBook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            tools:ignore="MissingPrefix"
            android:textOff=""
            android:textOn=""
            />
        <ToggleButton
            android:id="@+id/strikeShortBook"
            android:layout_toRightOf="@+id/underlineShortBook"
            android:layout_toEndOf="@+id/underlineShortBook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            tools:ignore="MissingPrefix"
            android:textOff=""
            android:textOn=""
            />
        <Button
            android:id="@+id/showShortBook"
            android:layout_toRightOf="@+id/strikeShortBook"
            android:layout_toEndOf="@+id/strikeShortBook"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolsshortBook">

        <custom_views_and_styles.DroidWriterEditText
            android:id="@+id/droidEditTxt"
            android:textColor="#001919"
            android:gravity="start|top"
            android:inputType="textNoSuggestions|textMultiLine"
            android:singleLine="false"
            android:hint="Pen Down Your Story Here..."
            android:textColorHint="#2000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@null"
            android:background="#fff"/>
    </FrameLayout>
</RelativeLayout>
</custom_views_and_styles.DragToClose>